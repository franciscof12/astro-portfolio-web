---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import LinkedinIcon from "../components/LinkedinIcon.astro";
import GithubIcon from "../components/GithubIcon.astro";
---

<Layout title="Francisco Ferreira Portfolio">
	<main>
		<section class="mx-auto lg:w-[940px] w-full py-40">
			<section class="flex flex-row">
				<div>
					<h1
						class="text-white text-5xl font-bold flex flex-col gap-x-2 pb-8 lg:flex-row"
					>
						Francisco Ferreira <a
							href=https://www.linkedin.com/company/lifullconnect/mycompany/"
							target="_blank"
							rel="noopener"
							class="flex flex-row justify-start items-center"
						>
							<Badge>
								Working at Lifull Connect <img
									class="w-3 h-3"
									src="lifullconnectlogo.jpeg"
									alt=""
								/>
							</Badge>
						</a>
					</h1>
					<h2 class="text-xl opacity-80">
						Full Stack Software Developer focused on building unique
						products. Spain, Barcelona üìç
					</h2>
					<ul class="flex flex-row gap-2 pt-10">
						<li>
							<a
								href="https://www.linkedin.com/in/franciscoferreiraa/"
								target="_blank"
								rel="noopener"><LinkedinIcon /></a
							>
						</li>
						<li>
							<a
								href="https://github.com/franciscof12"
								target="_blank"
								rel="noopener"
							>
								<GithubIcon />
							</a>
						</li>
					</ul>
				</div>
				<img
					class="rounded-xl w-60 h-60 gap-x-2 gap-y-2"
					src="franciscoFoto.png"
					alt="foto de francisco"
				/>
			</section>
		</section>
	</main>
</Layout>
